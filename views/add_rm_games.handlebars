<main>

	
	<h3>Add Game to Catalogue</h3>

	<!-- Add Game -->
	<form action="post" method="/add_rm_games">

		<label>Game Name:
			<input type="text" id="game_name" name="game_name">
		</label>
		<br/>

		<!-- for storage in intersection table Game_Creators -->
		<label>Creator Name:
			<input type="text" id="creator_name" name="creator_name">
		</label>
		<br/>

		<label>Mininum Number of Players:
			<input type="number" id="min_num" name="min_num">
		</label>
		<br/>

		<label>Maximum Number of Players:
			<input type="number" id="max_num" name="max_num">
		</label>
		<br/>

		<label>Rating:
			<input type="number" id="rating" name="rating">
		</label>
		<br/>

		<label>Year Created:
			<input type="number" id="min_num" name="min_num">
		</label>
		<br/>

		<input type="submit" value="Add">

	</form>
	<br/>


	<h3>Add Genre to Existing Game</h3>

	<!-- Add Genres to Specific Games -->
	<form action="" method="">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<label>Game Genre:
			<input type="text" name="game_genre">
		</label>
		<br/>

		<input type="submit" value="Update" disabled>
	</form>
	<br/>


	<h3>Add Creator to Existing Game</h3>

	<!-- Add Creators to Specific Games -->
	<form action="" method="">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<label>Game Creator:
			<input type="text" name="game_genre">
		</label>
		<br/>

		<input type="submit" value="Update" disabled>
	</form>
	<br/>


	<h3>Delete Game from Catalogue</h3>

	<!-- Delete Game -->
	<form action="" method="">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<input type="submit" value="Delete" disabled>

	</form>
	<br/>


</main>
