<main>

	
	<h3>Add Game to Catalogue</h3>

	<!-- Add Game -->
	<form action="/add_rm_games" method="post">

		<label>Game Name:
			<input type="text" id="game_name" name="game_name">
		</label>
		<br/>

		<label>Mininum Number of Players:
			<input type="number" id="min_num" name="min_num">
		</label>
		<br/>

		<label>Maximum Number of Players:
			<input type="number" id="max_num" name="max_num">
		</label>
		<br/>

		<label>Rating:
			<input type="number" id="rating" name="rating">
		</label>
		<br/>

		<label>Year Created:
			<input type="number" id="year" name="year">
		</label>
		<br/>

		<input id="add" name="add" type="hidden" value="addGame">

		<input type="submit" value="Add">

	</form>
	<br/>


	<h3>Add Genre to Existing Game</h3>

	<!-- Add Genres to Specific Games -->
	<form action="/add_rm_games" method="post">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<label>Game Genre:
			<input type="text" name="genre_name">
		</label>
		<br/>

		<input id="add" name="add" type="hidden" value="addGenre">

		<input type="submit" value="Add">

	</form>
	<br/>


	<h3>Add Creator to Existing Game</h3>

	<!-- Add Creators to Specific Games -->
	<form action="/add_rm_games" method="post">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<label>Creator's First Name:
			<input type="text" name="creator_fname">
		</label>
		<br/>

		<label>Creator's Last Name (if applicable):
			<input type="text" name="creator_lname">
		</label>
		<br/>

		<input id="add" name="add" type="hidden" value="addCreator">

		<input type="submit" value="Add">
	</form>
	<br/>


	<h3>Update Age of Creator</h3>

	<!--Update Age of Creator-->
	<form action="/add_rm_games" method="post">

		<label>Creator's First Name:
			<input type="text" name="creator_fname">
		</label>
		<br/>

		<label>Creator's Last Name (if applicable):
			<input type="text" name="creator_lname">
		</label>
		<br/>

		<label>Creator's Age:
			<input type="text" name="creator_age">
		</label>
		<br/>

		<input id="add" name="add" type="hidden" value="updateAge">

		<input type="submit" value="Update">

	</form>


	<h3>Delete Game from Catalogue</h3>

	<!-- Delete Game -->
	<form action="/add_rm_games" method="post">

		<label>Game Name:
			<input type="text" name="game_name">
		</label>
		<br/>

		<input id="add" name="add" type="hidden" value="deleteGame">

		<input type="submit" value="Delete">

	</form>
	<br/>


</main>
